        {
            "name": "GDB: Launch without arguments",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/loadTester",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "preLaunchTask": "build" // Replace with your build task name if needed
        }

        {
            "name": "SSH Debug (GDBserver)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${workspaceFolder}/loadTester",
            "args": [],
            "miDebuggerServerAddress": "localhost:55555",
            "targetArchitecture": "arm64",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
    ]
}